<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{pictures.path}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{short_description}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{date}}</li>
    <li class="list-group-item">{{time}}</li>
    <li class="list-group-item">{{address}},{{city}}</li>
  </ul>
  <div class="card-body">
    <a href="/events/event/{{_id}}" class="card-link">View Event & Join</a>
  </div>
</div>